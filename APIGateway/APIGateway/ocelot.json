{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7279/" // Base URL for the services
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/products/{everything}", // Route for all requests
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/products/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS" ] // All HTTP methods
    },
    {
      "DownstreamPathTemplate": "/api/orders/{everything}", // Route for all requests
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 8081
        }
      ],
      "UpstreamPathTemplate": "/orders/{everything}", 
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS" ] // All HTTP methods
    }
  ],
  "ReRoutes": [],
  "Aggregates": []
}
